<?xml version="1.0" encoding="UTF-8"?>
<!-- beta -->
<configuration>
    <!-- 配置项，使用ConsoleAppender表示配置的是控制台的输出日志 -->
    <appender name="consoleLog" class="ch.qos.logback.core.ConsoleAppender">
        <!-- 定义日志输出的格式 -->
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>
                %d - %-4relative [%thread] %-5level %logger{35} - %msg%n
            </pattern>
        </layout>
    </appender>

    <!-- 配置info日志文件 -->
    <appender name="fileInfoLog" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- 配置日志过滤，错误日志不写入 -->
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>DENY</onMatch>
            <onMismatch>ACCEPT</onMismatch>
        </filter>
        <encoder>
            <pattern>
                %d - %-4relative [%thread] %-5level %logger{35} - %msg%n
            </pattern>
            <charset>UTF-8</charset>
        </encoder>
        <!-- 日志滚动策略 -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- 日志文件的输出路径 -->
            <fileNamePattern>D:\Apache\apache-tomcat-9.0.8\apache-tomcat-9.0.8\logs\dabo\info.%d.log
            </fileNamePattern>
        </rollingPolicy>
    </appender>

    <!-- 配置error日志文件 -->
    <appender name="fileErrorLog" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- 配置日志过滤，仅写入error级别的错误日志 -->
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        <encoder>
            <pattern>
                %d - %-4relative [%thread] %-5level %logger{35} - %msg%n
            </pattern>
            <charset>UTF-8</charset>
        </encoder>
        <!-- 日志滚动策略 -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- 日志文件的输出路径 -->
            <fileNamePattern>D:\Apache\apache-tomcat-9.0.8\apache-tomcat-9.0.8\logs\dabo\error.%d.log
            </fileNamePattern>
        </rollingPolicy>
    </appender>

    <!-- root表示作用于整个项目范围 -->
    <root level="info">
        <appender-ref ref="consoleLog"/>
        <appender-ref ref="fileInfoLog"/>
        <appender-ref ref="fileErrorLog"/>
    </root>

</configuration>
